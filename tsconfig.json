{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es6",
    "lib": ["es6", "esnext", "dom"],
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "sourceRoot": "../",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/*": ["main/*"],
      "@/test/*": ["test/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "dist", "example"]
}
